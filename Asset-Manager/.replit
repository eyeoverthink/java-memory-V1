packages = ["unzip", "gradle", "mesa", "glfw", "xorg.libX11", "xorg.libXcursor", "xorg.libXrandr", "xorg.libXinerama", "xorg.libXi", "libglvnd", "xvfb-run", "xorg.xorgserver", "xorg.xf86videodummy"]
