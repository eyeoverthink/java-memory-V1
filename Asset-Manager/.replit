args = "cd /home/runner/workspace && export MESA_PATH=\"/nix/store/cpwib3zazj49fm0y04y53w4xkbqsgrgm-mesa-25.0.7\" && export LIBGLVND_PATH=\"/nix/store/7227amwg7k4sbl6mhglq17v5x5ki54ks-libglvnd-1.7.0\" && export LD_LIBRARY_PATH=\"$MESA_PATH/lib:$LIBGLVND_PATH/lib:$LD_LIBRARY_PATH\" && export LIBGL_DRIVERS_PATH=\"$MESA_PATH/lib/dri\" && export LIBGL_ALWAYS_SOFTWARE=1 && export MESA_GL_VERSION_OVERRIDE=3.3 && export MESA_GLSL_VERSION_OVERRIDE=330 && export GALLIUM_DRIVER=llvmpipe && export DISPLAY=:0 && gradle run --no-daemon 2>&1"

